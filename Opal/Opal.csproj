<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
      <TargetFramework>net7.0</TargetFramework>
      <ImplicitUsings>enable</ImplicitUsings>
      <Authors>Addison Schuhardt</Authors>
      <Description>A client library for the Gemini protocol written for .NET 7</Description>
      <PackageProjectUrl>https://github.com/aschuhardt/Opal</PackageProjectUrl>
      <RepositoryUrl>https://github.com/aschuhardt/Opal</RepositoryUrl>
      <PackageTags>gemini;gemini-protocol;client;smolnet</PackageTags>
      <PackageLicenseExpression>MIT</PackageLicenseExpression>
      <PackageVersion>1.3.0</PackageVersion>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
