<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
      <ImplicitUsings>disable</ImplicitUsings>
      <Authors>Addison Schuhardt</Authors>
      <Description>A client library for the Gemini protocol written for .NET 7</Description>
      <PackageProjectUrl>https://github.com/aschuhardt/Opal</PackageProjectUrl>
      <RepositoryUrl>https://github.com/aschuhardt/Opal</RepositoryUrl>
      <PackageTags>gemini;gemini-protocol;client;smolnet</PackageTags>
      <PackageLicenseExpression>MIT</PackageLicenseExpression>
      <PackageVersion>1.4.0</PackageVersion>
      <TargetFrameworks>net7.0;net6.0;netstandard2.0</TargetFrameworks>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
